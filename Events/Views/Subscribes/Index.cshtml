@model IEnumerable<EventsApp.Models.Subscribe>

@{
    ViewData["Title"] = "My Subscriptions";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="mb-3 text-right">
        <a asp-action="Create" class="btn btn-success">Create New Subscription</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().ParticipantName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Event.Title) <!-- Assuming Event has a Title property -->
                </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">You have no subscriptions yet.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ParticipantName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Event.Title) <!-- Display the event title -->
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.SubscribeId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.SubscribeId" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.SubscribeId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-link">Back to Events</a>
    </div>
</div>
